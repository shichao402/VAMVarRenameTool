<Window x:Class="VAMVarRenameTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        AllowDrop="True"
        mc:Ignorable="d"
        Title="VAR File Renamer" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBox x:Name="txtPath" Width="300" Margin="5" 
                     PreviewDragOver="TxtPath_PreviewDragOver"
                     Drop="TxtPath_Drop"/>
            <Button Content="Select Folder" Click="BrowseFolder_Click" Margin="5"/>
            <Button Content="Process" Click="Process_Click" Margin="5"/>
        </StackPanel>

        <DataGrid x:Name="dgResults" Grid.Row="1" Margin="5" AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Original File" Binding="{Binding OriginalPath}" Width="*"/>
                <DataGridTextColumn Header="New Name" Binding="{Binding NewName}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>